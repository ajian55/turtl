<p>{{t 'Your account needs to be upgraded! Please enter your Turtl login info.'}}</p>
<input type="text" name="v6_username" placeholder="{{t 'Email'}}" value="{{state.username}}" tabindex="1" autocomplete="off" autocorrect="off" autocapitalize="off">
<input type="password" name="v6_password" placeholder="{{t 'Passphrase'}}" value="{{state.password}}" autocomplete="off" autocorrect="off" tabindex="2">

<br>
<br>
<p>{{t 'Create a new account to migrate your data into.'}}</p>
<input id="inp_email" type="email" name="username" placeholder="{{t 'New email address'}}" tabindex="4" autocomplete="off" autocorrect="off" autocapitalize="none" autocorrect="off" tabindex="4">
<input id="inp_pass" type="password" name="password" placeholder="{{t 'Passphrase'}}" autocomplete="off" autocorrect="off" tabindex="5">
<input id="inp_conf" type="password" name="confirm" placeholder="{{t 'Confirm passphrase'}}" autocomplete="off" autocorrect="off" tabindex="6">
<div class="strength {{state.strength_class}}">
	<div class="progress-bar">
		<div class="inner" style="width: {{state.strength_width}}%;">&nbsp;</div>
	</div>
	<p>{{t 'Passphrase strength: '}}<span class="status">{{state.strength_text}}</span></p>
</div>

{{remember-me autologin}}

<div class="buttons">
	<div class="button login">
		<input type="submit" class="button" value="{{t 'Migrate'}}">
	</div>
	<p class="load">
		{{svg 'loading'}}
	</p>
	<p>
		<a href="/users/login">{{t 'Login to an existing account'}}</a>
	</p>
</div>

{{{advanced}}}

